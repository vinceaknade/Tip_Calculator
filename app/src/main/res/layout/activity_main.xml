<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/dosh_vert"
    android:alpha="0.90">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bill Amount"
        android:id="@+id/lblBillAmount"
        android:textColor="#ffffff"
        android:alpha="30"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:layout_marginTop="209dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tip Percent"
        android:id="@+id/lblTipPercent"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/lblBillAmount"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:alpha="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tip"
        android:id="@+id/lblTip"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/lblTipPercent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:alpha="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total"
        android:id="@+id/lblTotal"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/lblTip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:alpha="30" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtBillAmount"
        android:layout_alignTop="@+id/lblBillAmount"
        android:layout_alignParentEnd="true"
        android:width="160dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textAlignment="textEnd"
        android:background="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:alpha="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20%"
        android:id="@+id/txtTipPercent"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/lblTipPercent"
        android:layout_alignParentEnd="true"
        android:alpha="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.00"
        android:id="@+id/txtTip"
        android:layout_alignBottom="@+id/lblTip"
        android:textColor="#ffffff"
        android:background="#000000"
        android:width="100dp"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@+id/txtTotal"
        android:textAlignment="textEnd"
        android:alpha="30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.00"
        android:id="@+id/txtTotal"
        android:textColor="#ffffff"
        android:background="#000000"
        android:width="100dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/lblTotal"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:alpha="30" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear all"
        android:id="@+id/btnClear"
        android:layout_below="@+id/btnApply"
        android:layout_alignStart="@+id/btnApply"
        android:layout_alignEnd="@+id/txtTipPercent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/btnApply"
        android:layout_below="@+id/lblTotal"
        android:layout_alignStart="@+id/lblTotal"
        android:layout_alignEnd="@+id/txtTipPercent" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbrTip"
        android:layout_alignTop="@+id/txtTipPercent"
        android:layout_alignStart="@+id/txtBillAmount"
        android:layout_alignBottom="@+id/txtTipPercent"
        android:max="30"
        android:progress="20"
        android:indeterminate="false"
        android:minWidth="70dp"
        android:background="#000000"
        android:alpha="30" />

</RelativeLayout>
